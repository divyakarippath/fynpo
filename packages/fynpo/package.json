{
  "name": "fynpo",
  "version": "0.1.33",
  "description": "Supplement tools for using fyn with lerna",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "xrun [[build, docs], xarc/check]",
    "docs": "xrun xarc/docs",
    "test": "xrun xarc/test-only",
    "coverage": "xrun xarc/test-cov"
  },
  "keywords": [
    "fyn",
    "flat",
    "node",
    "modules",
    "node_modules",
    "lerna",
    "repo",
    "mono",
    "monorepo"
  ],
  "files": [
    "dist"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/fynpo.git"
  },
  "bin": {
    "fynpo": "dist/cli/fynpo.js"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.4.1",
    "filter-scan-dir": "^1.0.10",
    "fyn": "^0.4.9",
    "item-queue": "^1.0.0",
    "lodash": "^4.17.4",
    "nix-clap": "^1.3.0",
    "semver": "^5.6.0",
    "tslib": "^2.1.0",
    "visual-exec": "^0.1.0",
    "visual-logger": "^0.1.3",
    "xsh": "^0.4.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.16",
    "@xarc/module-dev": "^3.2.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.13",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "coverage",
      "*clap.js",
      "gulpfile.js",
      "dist",
      "test"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  },
  "prettier": {
    "printWidth": 100
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "@xarc/module-dev": {
    "features": [
      "jest",
      "jestTS",
      "prettier",
      "typedoc",
      "typescript"
    ]
  }
}
